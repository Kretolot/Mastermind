            </MenuItem>
            <MenuItem Header="Edycja">
                <MenuItem Header="Kopiuj" Click="kopiuj"/>
                <MenuItem Header="Wklej" Click="wklej"/>
                
            </MenuItem>
            <MenuItem Header="Pomoc">
                
            </MenuItem>
        </Menu>
        <StackPanel >
            <Label Content="Wpisz cos: " FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBox x:Name="txt" Text="" Margin="10"/>
            <Button Name="btn1" Content="Wyświetl" Margin="10" Click="btn1_Click"/>
        </StackPanel>
    </Grid>
</Window>
