<Window x:Class="kolkaa.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:kolkaa"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Canvas Name="canvas" Background="White">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Orientation="Horizontal" Margin="10">
                <TextBlock Text="Wprowadź liczbe kółek: "/>
                <TextBox Name="txtIle" Width="100" Height="20"/>
                <Button x:Name="btnDodaj" Content="Dodaj" Width="100" Height="20" Click="btnDodaj_Click" />
            </StackPanel>
        </Canvas>
    </Grid>
</Window>
